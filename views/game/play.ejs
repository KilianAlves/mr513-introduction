<%- include('../partials/header') -%>


<h1>Le juste prix(nombre)</h1>



<form action="/play" method="post">
  <label for="guess">Tentative restante : <%= game.remainingTries %> </label>
  <% if (game._status == 3) { %>
    <p>Vous nombre est trop petit</p>
    <% } else if (game._status == 4) { %>
    <p>Vous nombre est trop grand</p>
    <% } %>
  <label for="guess">Entrez un nombre</label>
  <input type="number" id="guess" name="guess" value="">
  <input type="submit"></input>
</form>